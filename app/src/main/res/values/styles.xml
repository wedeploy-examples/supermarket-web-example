<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:progressBarStyle">@style/WeLoading</item>
        <item name="android:textAppearanceSmall">@style/WeTextAppearance.Small</item>
        <item name="android:textAppearanceLarge">@style/WeTextAppearance.Large</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/WeButton</item>
        <item name="editTextStyle">@style/WeEditText</item>
    </style>

    <style name="AppTheme.GrayStatusBar" parent="AppTheme">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/gray_status_bar</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.LightStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="WeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/we_rounded_corners_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="backgroundTint">@color/we_button_selector</item>
    </style>

    <style name="WeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/we_edittext_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/editTextColor</item>
        <item name="android:textColorHint">@color/text_light2</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/we_edittext_selector</item>
        <item name="colorControlNormal">@color/we_edittext_background_default</item>
        <item name="colorControlActivated">@color/we_edittext_background_focused</item>
    </style>

    <style name="WeLoading" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="WeTextAppearance.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeTextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WeTextAppearance.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="WeAlertMessage" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ProductImage">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">108dp</item>
        <item name="android:background">@drawable/we_rounded_corners_background</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    </style>
</resources>
